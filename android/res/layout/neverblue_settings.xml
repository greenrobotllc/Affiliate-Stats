<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:padding="10px">
 
<TextView
		android:textSize="10pt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/settingsEmailLabel" android:text="API Key:"/><EditText android:layout_height="wrap_content" android:id="@+id/EmailText" android:layout_alignBaseline="@id/settingsEmailLabel" android:layout_alignParentRight="true" android:layout_width="120pt" android:inputType="text"></EditText>
<TextView
